<interface>
  <requires lib="gtk+" version="3.0"/>
  <object class="GtkWindow" id="setup_window">
    <property name="title">Configuración de Babelcomics</property>
    <property name="default_width">400</property>
    <property name="default_height">300</property>
    <property name="decorated">true</property>
    <child type="titlebar">
      <object class="GtkHeaderBar" id="headerbar">
        <property name="show_close_button">true</property>
        <property name="title">Configuración</property>
        <child type="end">
          <object class="GtkButton" id="btn_guardar">
            <property name="label">Guardar</property>
          </object>
        </child>
      </object>
    </child>
    <child>
      <object class="GtkBox" id="main_box">
        <property name="orientation">vertical</property>
        <property name="spacing">10</property>
        <property name="margin">10</property>

        <child>
          <object class="GtkEntry" id="entry_directorio_base">
            <property name="placeholder_text">Directorio base</property>
          </object>
        </child>
        <child>
          <object class="GtkSpinButton" id="spin_ancho_thumbnail">
            <property name="adjustment">adjustment1</property>
          </object>
        </child>
        <child>
          <object class="GtkSpinButton" id="spin_comics_por_pagina">
            <property name="adjustment">adjustment2</property>
          </object>
        </child>
        <child>
          <object class="GtkCheckButton" id="chk_modo_oscuro">
            <property name="label">Modo oscuro</property>
          </object>
        </child>
        <child>
          <object class="GtkCheckButton" id="chk_actualizar_metadata">
            <property name="label">Actualizar metadata automáticamente</property>
          </object>
        </child>
      </object>
    </child>
  </object>

  <object class="GtkAdjustment" id="adjustment1">
    <property name="lower">10</property>
    <property name="upper">1000</property>
    <property name="step_increment">10</property>
    <property name="page_increment">100</property>
    <property name="value">120</property>
  </object>

  <object class="GtkAdjustment" id="adjustment2">
    <property name="lower">1</property>
    <property name="upper">100</property>
    <property name="step_increment">1</property>
    <property name="page_increment">5</property>
    <property name="value">18</property>
  </object>
</interface>
